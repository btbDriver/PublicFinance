<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backColor"
    >

    <com.drive.finance.widget.SimpleTitleBar
        android:id="@+id/simpleTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleBar_content="修改交易密码"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/lineColor"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@android:color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="请输入原密码："
                android:textColor="@color/f2"
                android:textSize="13sp"
                android:padding="6dp"
                />
            <EditText
                android:id="@+id/originPassEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="13sp"
                android:textColor="@color/f3"
                android:background="@drawable/edit_back_gray"
                android:padding="5dp"
                android:inputType="numberPassword"
                android:hint="请输入原始密码"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="请输入新密码："
                android:textColor="@color/f2"
                android:textSize="13sp"
                android:padding="6dp"
                />
            <EditText
                android:id="@+id/newPassEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="13sp"
                android:textColor="@color/f3"
                android:background="@drawable/edit_back_gray"
                android:padding="5dp"
                android:inputType="numberPassword"
                android:hint="请输入新密码"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="请确认新密码："
                android:textColor="@color/f2"
                android:textSize="13sp"
                android:padding="6dp"
                />
            <EditText
                android:id="@+id/confirmPassEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="13sp"
                android:textColor="@color/f3"
                android:background="@drawable/edit_back_gray"
                android:padding="5dp"
                android:inputType="numberPassword"
                android:hint="请输入新密码"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/submitText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/view_back_blue"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            />

    </LinearLayout>
</LinearLayout>

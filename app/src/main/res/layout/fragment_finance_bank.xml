<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    >

    <com.drive.finance.widget.SimpleTitleBar
        android:id="@+id/simpleTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleBar_content="添加银行卡"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/lineColor"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="选择开户行"
                android:textSize="13sp"
                android:textColor="@color/f3"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backColor"
                >
                <Spinner
                    android:id="@+id/backSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    ></Spinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="开户人姓名"
                    android:textSize="13sp"
                    android:textColor="@color/f3"
                    />
                <EditText
                    android:id="@+id/bankUserEdit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="@color/f3"
                    android:textSize="13sp"
                    android:background="@drawable/edit_back_gray"
                    android:padding="5dp"
                    android:hint="请输入开户人姓名"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="银行卡号"
                    android:textSize="13sp"
                    android:textColor="@color/f3"
                    />
                <EditText
                    android:id="@+id/bankCardEdit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="@color/f3"
                    android:textSize="13sp"
                    android:background="@drawable/edit_back_gray"
                    android:padding="5dp"
                    android:hint="请输入银行卡号"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="银行卡号确认"
                    android:textSize="13sp"
                    android:textColor="@color/f3"
                    />
                <EditText
                    android:id="@+id/bankCardConfirmEdit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="@color/f3"
                    android:textSize="13sp"
                    android:background="@drawable/edit_back_gray"
                    android:padding="5dp"
                    android:hint="请输入银行卡号"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textSize="13sp"
                        android:textColor="@color/f1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="重复验证可防止误操作导致卡号信息错误"
                        android:textSize="13sp"
                        android:textColor="@color/f3"
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="银行卡详细资料（可增强提现稳定性）"
                    android:textColor="@color/f1"
                    android:textSize="15sp"
                    android:layout_marginTop="20dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="开户银行省份"
                        android:textSize="13sp"
                        android:textColor="@color/f3"
                        />
                    <EditText
                        android:id="@+id/provEdit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:textColor="@color/f3"
                        android:textSize="13sp"
                        android:background="@drawable/edit_back_gray"
                        android:padding="5dp"
                        android:hint="请输入开户银行省份"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="所在城市"
                        android:textSize="13sp"
                        android:textColor="@color/f3"
                        />
                    <EditText
                        android:id="@+id/cityEdit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:textColor="@color/f3"
                        android:textSize="13sp"
                        android:background="@drawable/edit_back_gray"
                        android:padding="5dp"
                        android:hint="请输入开户银行城市"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="电话(可选)"
                        android:textSize="13sp"
                        android:textColor="@color/f3"
                        />
                    <EditText
                        android:id="@+id/telEdit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:textColor="@color/f3"
                        android:textSize="13sp"
                        android:background="@drawable/edit_back_gray"
                        android:padding="5dp"
                        android:hint="请输入电话"
                        />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backColor"
                android:text="卡绑定的电话号码，可填写持卡电话"
                android:textSize="15sp"
                android:textColor="@color/f3"
                android:padding="12dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="开户地址(可选)"
                    android:textSize="13sp"
                    android:textColor="@color/f3"
                    />
                <EditText
                    android:id="@+id/bankAddressEdit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="@color/f3"
                    android:textSize="13sp"
                    android:background="@drawable/edit_back_gray"
                    android:padding="5dp"
                    android:hint="请输入开户地址"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backColor"
                android:text="请详细填写，以避免提现失败"
                android:textSize="15sp"
                android:textColor="@color/f3"
                android:padding="12dp"
                />

            <LinearLayout
                android:id="@+id/submitLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/layout_back_red"
                android:padding="12dp"
                android:gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/bank_add_submit"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确认绑定"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:layout_marginLeft="4dp"
                    />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>

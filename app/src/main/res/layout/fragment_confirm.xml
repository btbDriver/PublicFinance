<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <com.drive.finance.widget.SimpleTitleBar
        android:id="@+id/simpleTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleBar_content="忘记密码"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/lineColor"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="找回密码-验证问题"
            android:textSize="20sp"
            android:textColor="@color/f1"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="问题1：我妈妈的名字叫什么？"
            android:layout_marginTop="12dp"
            android:textColor="@color/f3"
            android:textSize="13sp"
            android:padding="6dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="答案1"
            android:textSize="13sp"
            android:textColor="@color/f3"
            android:layout_marginTop="12dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="问题1：我外公的名字叫什么？"
            android:layout_marginTop="12dp"
            android:textColor="@color/f3"
            android:textSize="13sp"
            android:padding="6dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="答案2"
            android:textSize="13sp"
            android:textColor="@color/f3"
            android:layout_marginTop="12dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="问题1：我爸爸的名字叫什么？"
            android:layout_marginTop="12dp"
            android:textColor="@color/f3"
            android:textSize="13sp"
            android:padding="6dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="答案3"
            android:textSize="13sp"
            android:textColor="@color/f3"
            android:layout_marginTop="12dp"
            />

        <TextView
            android:id="@+id/nextPlaceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="提交"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:background="@color/f1"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />
    </LinearLayout>

</LinearLayout>
